<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/document_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen5dp"
    card_view:cardBackgroundColor="@color/monokia_pro_black"
    card_view:cardCornerRadius="@dimen/dimen5dp"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/document_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen5dp"
            android:textColor="@color/monokia_pro_green"
            android:textSize="@dimen/dimen16sp"
            tools:text="Functions" />

        <TextView
            android:id="@+id/document_description_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen5dp"
            android:textColor="@color/monokia_pro_purple"
            tools:text="Bla bla bla bla" />
    </LinearLayout>
</androidx.cardview.widget.CardView>