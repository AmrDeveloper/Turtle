<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/diagnostic_state_icon"
        android:layout_width="@dimen/dimen24dp"
        android:layout_height="@dimen/dimen24dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_right" />

    <ImageView
        android:id="@+id/diagnostic_type_icon"
        android:layout_width="@dimen/dimen24dp"
        android:layout_height="@dimen/dimen24dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/diagnostic_state_icon"
        android:layout_toRightOf="@id/diagnostic_state_icon"
        android:src="@drawable/ic_error" />

    <TextView
        android:id="@+id/diagnostic_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/diagnostic_type_icon"
        android:gravity="center_vertical"
        android:padding="@dimen/dimen5dp"
        android:textColor="@color/red"
        android:textSize="@dimen/dimen16sp"
        tools:text="Diagnostic Tag" />
</RelativeLayout>